# fancy pants
alias git hub
alias vim nvim
alias ls 'eza --icons --git'
alias icat 'kitty +kitten icat --align left'
alias watch viddy
abbr nv nvim
abbr pn pnpm
abbr yless 'jless --yaml'

# copy/pasta
{{- if eq .chezmoi.os "darwin" }}
alias c pbcopy
alias v pbpaste
{{- else }}
alias c 'xclip -selection clipboard'
alias v 'xclip -selection clipboard -o'
{{- end }}

# tmux
abbr tm tmux
abbr tma tmux at
abbr tml tmux ls

# ls
abbr l ls
abbr ll ls -l
abbr la ls -a
abbr lla ls -al
abbr lt ls -l --tree
abbr lt2 ls -l --tree --level=2
abbr lt3 ls -l --tree --level=3
abbr lt4 ls -l --tree --level=4
abbr lt5 ls -l --tree --level=5

# git
abbr ga git add
abbr gc git commit -m
abbr gd git diff
abbr gf git fetch
abbr gp git pull
abbr gP git push
abbr gs git status
abbr gco git checkout
abbr gsw git switch
abbr gbr git switch -c

# dotfiles
abbr cm chezmoi
abbr cma chezmoi add
abbr cmr chezmoi re-add
abbr cmR chezmoi remove
abbr cme chezmoi edit --apply
abbr cms chezmoi status
abbr cmd chezmoi diff
abbr cmA chezmoi -v apply
abbr cmcd cd {{ .chezmoi.homeDir }}/.dotfiles

# lazygit
alias lz lazygit
alias lzc "lz --path {{ .chezmoi.homeDir }}/.dotfiles"
# lazydocker
alias lzd lazydocker

# github cli
abbr ghb gh browse
abbr ghd gh dash
abbr ghp gh pr create

# godot
alias nvg 'nvim --listen ./godothost .'

# other
alias tools 'glow {{ .chezmoi.homeDir }}/.config/docs/tools.md'
alias reload 'exec fish'
